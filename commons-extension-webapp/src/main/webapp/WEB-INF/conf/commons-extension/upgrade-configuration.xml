<?xml version="1.0" encoding="UTF-8"?>
<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
    <component profiles="all">
      <type>org.exoplatform.commons.migration.SettingsMigration</type>
    </component>
  
    <component profiles="all">
      <type>org.exoplatform.commons.migration.JPAAsynMigrationService</type>
    </component>
  
    <component profiles="all">
      <type>org.exoplatform.commons.migration.MailNotificationsMigration</type>
    </component>
  
    <component profiles="all">
      <type>org.exoplatform.commons.migration.WebNotificationsMigration</type>
    </component>

	<component>
		<type>org.exoplatform.commons.upgrade.UpgradeProductService</type>
		<init-params>
			<!-- Proceed to the upgrade if it's first time you run this service -->
			<value-param>
				<name>proceedUpgradeWhenFirstRun</name>
				<value>${commons.upgrade.proceedIfFirstRun}</value>
			</value-param>
		</init-params>
	</component>
</configuration>